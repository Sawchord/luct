{
    "manifest_version": 2,
    "name": "luCT certificate scanner",
    "version": "0.0",
    "description": "luCT ",
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "page_action": {
        "default_icon": "assets/icons/luct_unsafe.svg",
        "browser_style": true
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "activeTab",
        "tabs",
        "<all_urls>"
    ]
}